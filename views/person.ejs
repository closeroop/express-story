<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= master %>的主页</title>
    <link rel="stylesheet" href="./css/person.css">
    <link rel="stylesheet" href="./css/com_header.css">     <!--导航样式表-->
</head>
<body >
    <div id="nav_top">
        <%- include com_header.ejs %>   <!--头部-->
    </div>
     <div class="show-me">
         <div class="show-bgd"></div>
         <div class="show-pic">
             <% if( masterinfo.head !== null ) {%>
             <img src="../<%=masterinfo.head%>" alt="uu">
             <% }else{%>
             <img src="./pic//user_tou/tou-3.jpg" alt="uu">
             <%}%>
         </div>
         <div class="love-me">
             <h2 class="master"><%=masterinfo.u_id%></h2>
             <% if( user !== master ) {%>
               <button class="kiss-me">
                   <% if( !masterinfo.followinfo ) {%>
                   + 关注我
                   <%}else {%>
                   已关注✔
                   <%}%>
               </button>
             <button class="talk-me">- 私信我</button>
             <% }%>
         </div>
         <div class="show-word">
             <input  class="replace-word" disabled>
         </div>
     </div>
     <div class="show-art">
         <div class="art-me">
                <div class="art-me-nav">
                    <a href="javascript:">文章 <span class="underline"></span></a>
                    <a href="javascript:">动态 <span  class="underline"></span></a>
                    <a href="javascript:">热门 <span  class="underline"></span></a>
                </div>
                <div class="art-me-list">
                    <% for(let i in artData){ %>
                    <div class="my-art">
                        <div class="art-intro">
                            <h3><a href="/art/<%= artData[i].art_id %>"><%= artData[i].art_head %></a></h3>
                            <% if(artData[i].pic){ %>
                            <a href="/art/<%=artData[i].art_id %>" class="art-pic" style="background: url(<%-artData[i].pic%>) center/cover no-repeat"  target="_blank">
                                </a>
                            <% } %>
                            <% if(artData[i].pic){ %>
                            <p >
                                <%=artData[i].showart.slice(0,80)%>.......
                            </p>
                            <% }else {%>
                            <p style="padding-right: 0">
                                <%=artData[i].showart.slice(0,80)%>.......
                            </p>
                            <% } %>
                        </div>
                        <div class="art-comment">
                            <span class="write-time"><%= artData[i].art_id %></span><a href="javascript:">评论 <%= artData[i].art_laud %></a>
                            <a href="javascript:">喜欢 <%= artData[i].art_like %></a> <a href="javascript:">浏览量 <%= artData[i].art_view %></a>
                            <% if( user === master ) {%>
                            <div class="art-edit">
                                <a href="/edit/<%= artData[i].art_id %>  " target="_blank" class="edit-art">编辑</a>
                                <a href="/delete/<%= artData[i].art_id %>" class="delete-art">删除</a>
                            </div>
                            <% }%>
                        </div>
                    </div>
                    <% }%>
                    <div class="no-art">
                        我在憋大招呢 (╯°Д°)╯︵┻━┻
                    </div>
                    <div class="add-more"><a href="javascript:">加载更多.........</a></div>
                </div>

         </div>
         <div class="art-me-like">
             <img src="pic/p-2.jpg" alt="">
             <table class="me-table" >
                 <tr>
                     <td>昵称</td>
                     <td><%=masterinfo.minname%></td>
                 </tr>
                 <tr>
                     <td>生日</td>
                     <td><%=masterinfo.birth%></td>
                 </tr>
                 <tr>
                     <td>个性签名</td>
                     <td><%=masterinfo.intro%></td>
                 </tr>
             </table>
         </div>
     </div>
</body>
<script src="./js/jquery.min.js"></script>
<script src="./js/person.js"></script>
</html>